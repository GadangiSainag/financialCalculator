        },
        "slider": {
          "is_visible": true,
          "min": 100000,
          "minLabel": "1L",
          "max": 10000000,
          "maxLabel": "1Cr",
          "step": 50000
        }
      },
      {
        "id": "intrest_rate_car_emi",
        "title": "Rate of intrest(p.a)",
        "description": "",
        "text_box": {
          "is_visible": true,
          "placeholder_value": 10000,
          "is_commas_enabled": true,
          "prefix": "",
          "suffix": "%",
          "input_type": "number"
        },
        "slider": {
          "is_visible": true,
          "min": 1,
          "minLabel": "1%",
          "max": 30,
          "maxLabel": "30%",
          "step": 0.1
