    "outputs": [
      {
        "id": "monthly_car_emi",
        "title": "Monthly EMI",
        "front_character": "₹",
        "back_character": "",
        "formula": {
          "formulaName": "CAR_LOAN_EMI",
          "parameters": [
            "loan_amount_car_emi",
            "intrest_rate_car_emi",
            "loan_tenure_car_emi"
