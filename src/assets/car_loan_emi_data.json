        "id": "loan_tenure_car_emi",
        "title": "Loan tenure",
        "description": "",
        "text_box": {
          "is_visible": true,
          "placeholder_value": 5,
          "is_commas_enabled": false,
          "prefix": "",
          "suffix": "Yr",
          "input_type": "number"
        },
        "slider": {
